/**index.wxss**/
.change {
  padding: 20rpx 40rpx;
  color: #8995a1;
  font-size: 24rpx;
}
.change navigator {
  display: flex;
  align-items: center;
}
.change .icon-down {
  color: #8995a1;
  font-size: 8rpx;
}

.input-area {
  position: relative;
}
.textarea-warp {
  background: #fff;
  border-bottom: 1px solid #c7cee0;
}
.input-area textarea {
  background-color: #fff;
  padding: 30rpx 0 30rpx 30rpx;
  width: calc(100%-48rpx);
  margin: 0;
  box-sizing: border-box;
}
.input-area .icon-close {
  position: absolute;
  right: 12rpx;
  top: 20rpx;
  font-size: 40rpx;
  color: #8995a1;
}


.input-area .text-area {
  min-height: 80rpx;
  padding: 40rpx;
  background-color: #fff;
}
.input-area .text-title {
  font-size: 28rpx;
  color: #8995a1;
}

.input-area .text-result {
  padding: 20rpx 0;
}

